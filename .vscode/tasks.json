{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "compile",
      "problemMatcher": "$tsc",
      "presentation": {
        "reveal": "silent"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      }
    },
    {
      "label": "cargo build (minimal)",
      "type": "shell",
      "command": "cargo",
      "args": [
        "build"
      ],
      "options": {
        "cwd": "${workspaceFolder}/testcases/minimal"
      },
      "problemMatcher": [
        "$rustc"
      ],
      "group": "build"
    }
  ]
}
